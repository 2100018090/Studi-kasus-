#include <iostream>

using namespace std;

class Bensin{
	public:	//mendekalrasian  nama yang bersifat public variabel yang di class
		
		Bensin();
		void pilihan();  //variabel 
		void hitung_uang();
		void hitung_liter();
	private://mendekalrasian  nama yang bersifat private variabel yang di gunakan 
		float uang, liter, tampil;
		string pil, ambil;
		float harga, pertalite, pertamax;
		string nama;
};

Bensin::Bensin(){  //mengdeklarasikan harga bahan bakar 
	harga = 0;
	pertalite = 7000;
	pertamax = 9000;
}

void Bensin::pilihan(){  //pengdeklarasian pilihan menu daftar bahan bakar 
	cout<<"==============================\n";
	cout<<" Daftar Bahan Bakar dan Harga \n";
	cout<<" - Pertalite    Rp.7,000     \n";
	cout<<" - Pertamax     Rp.9,000     \n";
	cout<<"==============================\n";
	cout<<"Masukkan Nama anda : "; cin>>nama;
	cout<<"Masukkan pilihan anda : "; cin>>ambil;
		if (ambil == "pertalite" || ambil == "pertamax"){
		cout<<"==============================\n";
		cout<<" Beli berdasarkan \n";
		cout<<" - Uang\n";
		cout<<" - Liter\n";
		cout<<"==============================\n";
		cout<<"Masukkan Pilihan Pembelian : "; cin>>pil;
		if (pil == "uang"){
			hitung_uang();
		}else if (pil == "liter"){
			hitung_liter();
		}else {
			system("cls");
			pilihan();
		}
	}
	system("cls");
	pilihan();
}
void Bensin::hitung_uang(){
		cout<<"masukkan besarnya uang : "; cin>> uang;
		if(ambil == "pertalite"){
			harga = pertalite;
		}else if (ambil == "pertamax"){
			harga = pertamax;
		}
	tampil = uang / harga;
	cout<<endl<<endl;
	cout<<" 	   SPBU UAD \n";
	cout<<"      SPBU KELOMPOK SAYA \n";
	cout<<"    Jl.Jogja-Wonosari km 10 \n";
	cout<<"___________ \n";
	cout<<" Nama Pelanggan	: "<<nama<<endl;
	cout<<" Jenis Bensin	: "<<ambil<<endl;
	cout<<" Total Liter	: "<<tampil<<" L"<<endl;
	cout<<" Total Harga	: "<<"Rp."<<uang<<endl;
	cout<<"___________ \n";
	cout<<" TERIMAKASIH  & SELAMAT JALAN \n";
	cout<<" SEMOGA SELAMAT SAMPAI TUJUAN \n"; 
	cout<<"--------------AAMIIN-------------\n";
	system ("PAUSE");
	system("cls");
	pilihan();
	
